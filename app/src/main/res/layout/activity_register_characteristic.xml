<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="@string/characteristic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/characteristic_description"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/dimen_16dp"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/characteristicEditText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_corner_5dp_stroke_grey"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:maxLines="3"
        android:gravity="top"
        tools:text="Vui ve, coi mo, hoa dong, than thien"
        android:padding="@dimen/dimen_8dp"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/dimen_16dp"
        android:text="@string/next"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_radius="@dimen/dimen_32dp"
        android:visibility="visible" />
</LinearLayout>