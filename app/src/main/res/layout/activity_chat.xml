<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.thesis.yummy.view.TopBarView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.stfalcon.chatkit.messages.MessagesList
            android:id="@+id/messagesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/input"
            app:outcomingDefaultBubbleColor="@color/colorPrimaryDark"
            app:outcomingDefaultBubblePressedColor="@color/colorPrimaryDark"
            app:outcomingBubblePaddingBottom="10dp"
            app:incomingBubblePaddingTop="10dp"
            app:incomingBubblePaddingBottom="10dp"
            app:outcomingBubblePaddingTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/input"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#dddddd"/>

        <com.stfalcon.chatkit.messages.MessageInput
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:inputHint="@string/input_message"
            app:showAttachmentButton="false"
            app:inputButtonDefaultBgColor="@color/colorPrimaryDark"
            app:inputButtonDefaultBgPressedColor="@color/colorPrimaryDark"/>

    </RelativeLayout>

</LinearLayout>